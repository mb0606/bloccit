<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="span8">
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by 
      <%= @post.user.name %>
    </small>  

    <p><%= markdown @post.body %></p>
    <p><%= image_tag(@post.image_url) if @post.image? %></p>
   <!--      @post.image_url is a help pointing to @post.image.url -->
  </div>
  
  <div class="span4">
    <% if can? :edit, @post %>
      <%= link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-large btn-block' %>
    <% end %>

    <% if can? :destroy, @post %>
      <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-large btn-block btn-danger', confirm: 'Are you sure you want to delete this post?' %>
    <% end %>        
  </div>
  <div class="span8">
  <% @post.comments.each do |comment| %>
      <%= render comment  %>
    <!--   This == render @post.comments == render partial 'comments/comment', local: (comment: comment) -->
  <% end %>
  
  <% if can? :create, Comment %>
    <%= render partial: 'comments/form', locals: {topic: @topic,post: @post, comment: Comment.new} %>
  <% end%>
</div>
</div>